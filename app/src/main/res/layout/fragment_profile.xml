<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileFragment">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:elevation="10dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/blue">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="230dp"

                      >

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/medpro" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_profile_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/profile_dp"
                            app:civ_border_color="@color/orange"
                            app:civ_border_width="3dp" />

                        <ImageView
                            android:id="@+id/change_profile"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="53dp"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@id/log_out"
                            android:background="@drawable/button_back"
                            android:padding="5dp"
                            android:src="@drawable/edit" />

                        <ImageView
                            android:id="@+id/log_out"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/button_back"
                            android:padding="5dp"
                            android:src="@drawable/logout" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_profile_image"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:enabled="false"
                            android:text="Zack David"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold" />


                  </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:background="@color/white"
                      android:layout_margin="1dp"
                      android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Credentials"
                            android:padding="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_marginTop="20dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="20dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="bottom"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true">
                              <EditText
                                  android:id="@+id/user_name_ev"
                                  android:layout_width="match_parent"
                                  android:layout_height="50dp"
                                  android:layout_margin="1dp"
                                  android:hint="username"
                                  android:text="Junaid"
                                  android:padding="5dp"
                                  android:textColor="@color/black"
                                  android:background="@color/white"
                                  android:enabled="false"
                                  android:drawableLeft="@drawable/user_name_icon"
                                  android:drawablePadding="10dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="bottom"
                            android:foregroundGravity="top"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp">
                              <EditText
                                  android:id="@+id/user_email_ev"
                                  android:layout_width="match_parent"
                                  android:layout_height="50dp"
                                  android:layout_margin="1dp"
                                  android:hint="email"
                                  android:text="junaidcoder17@gmail.com"
                                  android:padding="5dp"
                                  android:textColor="@color/black"
                                  android:background="@color/white"
                                  android:enabled="false"
                                  android:drawableLeft="@drawable/user_email_icon"
                                  android:drawablePadding="10dp"
                                  />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="bottom"
                            android:foregroundGravity="top"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true">
                              <EditText
                                  android:id="@+id/user_adsress_ev"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:minHeight="50dp"
                                  android:layout_margin="1dp"
                                  android:hint="delivery address"
                                  android:text="jun ncijdsnc  ifdied jdi di ndiw nd ndind dkni cij ncj"
                                  android:padding="5dp"
                                  android:maxLines="3"
                                  android:textColor="@color/black"
                                  android:background="@color/white"
                                  android:enabled="false"
                                  android:drawableLeft="@drawable/user_loc_icon"
                                  android:drawablePadding="10dp"
                                  />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="bottom"
                            android:foregroundGravity="top"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="50dp">
                              <EditText
                                  android:id="@+id/user_mobile_ev"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:minHeight="50dp"
                                  android:layout_margin="1dp"
                                  android:hint="delivery address"
                                  android:text="03009999999"
                                  android:padding="5dp"
                                  android:textColor="@color/black"
                                  android:background="@color/white"
                                  android:enabled="false"
                                  android:drawableLeft="@drawable/phone"
                                  android:drawablePadding="10dp"
                                  />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/update_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="bottom"
                            android:foregroundGravity="top"
                            app:cardCornerRadius="5dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">
                              <Button
                                  android:id="@+id/update_btn"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Update"
                                  android:layout_margin="1dp"
                                  android:textColor="@color/orange"
                                  android:background="@color/white"
                                  android:visibility="gone"
                                  />
                        </androidx.cardview.widget.CardView>
                  </LinearLayout>

            </androidx.cardview.widget.CardView>

      </LinearLayout>

</ScrollView>