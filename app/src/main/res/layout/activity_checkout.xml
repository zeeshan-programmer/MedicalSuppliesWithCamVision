<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:focusableInTouchMode="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp">
                  <androidx.cardview.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:padding="2dp"
                      app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@color/grey"
                            >
                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Payment Method"
                                  android:gravity="center"
                                  android:textSize="22sp"
                                  android:textStyle="bold"
                                  android:padding="10dp"
                                  android:layout_marginBottom="30dp"
                                  android:textColor="@color/light_black"/>
                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:weightSum="2"
                                  android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">
                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/ic_baseline_moped_24"
                                        android:textColor="@color/black"
                                        android:background="@drawable/button_blue"
                                        android:text="Cash on Delivery"
                                        android:textAllCaps="false"
                                        android:textSize="17sp"
                                        android:textStyle="bold"
                                        android:padding="10dp"
                                        android:drawablePadding="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:id="@+id/cod_btn"/>
                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/ic_baseline_run_circle_24"
                                        android:textColor="@color/light_black"
                                        android:background="@drawable/button_white"
                                        android:text="Use Self Pick-Up"
                                        android:textAllCaps="false"
                                        android:textSize="17sp"
                                        android:textStyle="bold"
                                        android:padding="10dp"
                                        android:drawablePadding="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/pickup_btn"/>
                              </LinearLayout>
                        </LinearLayout>
                  </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black">
                  <androidx.cardview.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:cardCornerRadius="10dp"
                      android:layout_margin="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Shipping Details"
                                  android:gravity="center"
                                  android:textSize="22sp"
                                  android:textStyle="bold"
                                  android:padding="10dp"
                                  android:layout_marginBottom="30dp"
                                  android:textColor="@color/light_black"/>

                              <androidx.cardview.widget.CardView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  app:cardCornerRadius="5dp"
                                  app:cardBackgroundColor="@color/light_black">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        app:cardCornerRadius="5dp">
                                          <EditText
                                              android:id="@+id/checkout_address"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:textColor="@color/light_black"
                                              android:background="@color/white"
                                              android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                              android:text="Jinnah Colony Faisalabad"
                                              android:textAllCaps="false"
                                              android:textSize="17sp"
                                              android:padding="20dp"
                                              android:drawablePadding="10dp"
                                              android:layout_marginBottom="20dp"
                                              android:layout_margin="1dp"
                                              android:focusedByDefault="false"
                                              />
                                    </androidx.cardview.widget.CardView>
                              </androidx.cardview.widget.CardView>
                              <androidx.cardview.widget.CardView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  app:cardCornerRadius="5dp"
                                  android:layout_marginTop="10dp"
                                  app:cardBackgroundColor="@color/light_black">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        app:cardCornerRadius="5dp">
                                          <EditText
                                              android:id="@+id/checkout_mobile"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:textColor="@color/light_black"
                                              android:background="@color/white"
                                              android:drawableLeft="@drawable/phone"
                                              android:text="0300999999"
                                              android:textAllCaps="false"
                                              android:textSize="17sp"
                                              android:padding="20dp"
                                              android:drawablePadding="10dp"
                                              android:layout_marginBottom="20dp"
                                              android:layout_margin="1dp"
                                              android:focusedByDefault="false"
                                              />
                                    </androidx.cardview.widget.CardView>
                              </androidx.cardview.widget.CardView>
                        </LinearLayout>
                  </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black">
                  <androidx.cardview.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:cardCornerRadius="10dp"
                      android:layout_margin="2dp"
                      >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Order Details"
                                  android:gravity="center"
                                  android:textSize="22sp"
                                  android:textStyle="bold"
                                  android:padding="10dp"
                                  android:layout_marginBottom="30dp"
                                  android:textColor="@color/light_black"/>
                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:padding="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:padding="10dp"
                                        android:text="Sub Total"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:padding="10dp"
                                        android:text="33"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                              </RelativeLayout>
                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:padding="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:padding="10dp"
                                        android:text="Discount"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/discount_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:padding="10dp"
                                        android:text="89"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                              </RelativeLayout>
                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:padding="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:padding="10dp"
                                        android:text="Shipping Charges"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/shipping_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:padding="10dp"
                                        android:text="200"
                                        android:textColor="@color/light_black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                              </RelativeLayout>
                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:padding="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:padding="10dp"
                                        android:text="Grand Total (Rs.)"
                                        android:textColor="@color/blue"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/grand_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:padding="10dp"
                                        android:text="800"
                                        android:textColor="@color/blue"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                              </RelativeLayout>


                        </LinearLayout>
                  </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Place Order"
                android:id="@+id/place_order"
                android:textAllCaps="false"
                android:background="@drawable/button_blue"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >
            </Button>

      </LinearLayout>

</ScrollView>